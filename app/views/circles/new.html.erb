<form action="<%= user_circles_url(current_user) %>" method="POST">
<%= auth_token_helper %>

    Circle Name:<br>
    <input type="text" name="circle[name]"><br>

    <% @users.each do |user| %>
      <label>
        <input
        type="checkbox"
        name="circle[friend_ids][]"
        value="<%= user.id %>"> <%= user.email %><br>
      </label>
    <% end %>

  <p><input type="submit" value="Add to Circle"></p>
</form>